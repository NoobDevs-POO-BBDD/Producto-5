<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tiendaonline.controller.ClienteController">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label text="Gestión de Clientes" textFill="#2196f3">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Filtrar por Tipo de Cliente:" />
                        <ComboBox fx:id="filtroComboBox" prefWidth="150.0" promptText="Seleccionar Filtro" />
                        <Button mnemonicParsing="false" onAction="#aplicarFiltro" text="Aplicar Filtro" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>

                <TableView fx:id="clientesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nifColumn" prefWidth="100.0" text="NIF" />
                        <TableColumn fx:id="nombreColumn" prefWidth="150.0" text="Nombre" />
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="domicilioColumn" prefWidth="150.0" text="Domicilio" />
                        <TableColumn fx:id="tipoColumn" prefWidth="100.0" text="Tipo" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="TOP_LEFT">
            <children>
                <Label text="Añadir Nuevo Cliente">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="NIF:" />
                        <TextField fx:id="nifField" GridPane.columnIndex="1" />
                        <Label text="Nombre:" GridPane.rowIndex="1" />
                        <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Email:" GridPane.rowIndex="2" />
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Domicilio:" GridPane.rowIndex="3" />
                        <TextField fx:id="domicilioField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <CheckBox fx:id="premiumCheckBox" mnemonicParsing="false" text="Cliente Premium" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label fx:id="cuotaLabel" text="Cuota Mensual:" GridPane.rowIndex="5" />
                        <TextField fx:id="cuotaField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>
                <Button mnemonicParsing="false" onAction="#handleAnadirCliente" text="Añadir Cliente" />
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>
    </right>
</BorderPane>
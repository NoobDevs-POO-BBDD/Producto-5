<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tiendaonline.controller.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e0e0e0; -fx-padding: 10;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnInicio" mnemonicParsing="false" onAction="#mostrarVistaInicio" text="Tienda Online">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <Pane HBox.hgrow="ALWAYS" />

                <HBox spacing="10.0" alignment="CENTER">
                    <Button fx:id="btnGestionClientes" mnemonicParsing="false" onAction="#mostrarVistaClientes" text="Gestión Clientes" />
                    <Button fx:id="btnGestionArticulos" mnemonicParsing="false" onAction="#mostrarVistaArticulos" text="Gestión Artículos" />
                    <Button fx:id="btnGestionPedidos" mnemonicParsing="false" onAction="#mostrarVistaPedidos" text="Gestión Pedidos" />
                </HBox>

                <Pane HBox.hgrow="ALWAYS" />

                <Button fx:id="btnSalir" mnemonicParsing="false" onAction="#salirAplicacion" style="-fx-background-color: #ffcccc;" text="Salir" textFill="#b50000" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox fx:id="vistaBienvenida" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Bienvenido a la Tienda Online" textFill="#9e9e9e">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>

                <Label fx:id="lblLogo" textFill="#52c9ff">
                    <font>
                        <Font name="Monospaced Regular" size="12.0" />
                    </font>
                </Label>

                <Label text="Proyecto realizado por NoobDevs" textFill="#8a8a8a">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>

            </children>
        </VBox>
    </center>

    <bottom>
        <HBox style="-fx-padding: 5;">
            <children>
                <Label text=" Sistema de Gestión v1.0 - JavaFX &amp; JPA" textFill="#757575" />
            </children>
        </HBox>
    </bottom>

</BorderPane>